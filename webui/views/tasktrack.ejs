<!DOCTYPE html>
<div class="page-header">
	<h1><%= title %></h1>
</div>

<div id="main" style="height:600px;border:1px solid #ccc;padding:10px;"></div>
<script src="/javascripts/echarts-plain.js"></script>
<script type="text/javascript">
	var myChart = echarts.init(document.getElementById('main'));
	myChart.setOption({
		tooltip : {
			trigger: 'axis'
		},
		legend : {
			data: ['workers', 'tasks', 'switches']
		},
		toolbox : {
			show: true,
			feature : {
				mark : {show: true},
				dataView : {show: true, readOnly: false},
				magicType : {show: true, type: ['line', 'bar']},
				restore : {show: true},
				saveAsImage : {show: true}
			}
		},
		calculable : true,
		xAxis : [
			{
				type : 'category',
				data : [<%= exectime %>]
			}
		],
		yAxis : [
			{
				type : 'value',
				name : 'workers',
				splitArea : {show: true}
			},
			{
				type : 'value',
				name : 'taskRelated',
				splitArea : {show: true}
			}
		],
		series : [
			{
				name : 'workers',
				type : 'bar',
				data : [<%= workers %>]
			},
			{
				name : 'tasks',
				type : 'line',
				yAxisIndex : 1,
				data : [<%= tasks %>]
			},
			{
				name : 'switches',
				type : 'line',
				yAxisIndex : 1,
				data : [<%= switches %>]
			}
		]
	});
</script>
